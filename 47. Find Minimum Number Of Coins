                https://leetcode.com/problems/coin-change/description/

Solution (Code Studio) : 

int findMinimumCoins(int amount) 
{ 
    vector<int> coins = {1000,500,100,50,20,10,5,2,1};
    int cnt = 0,i=0;

    while(i<9){
        if(amount >= coins[i]){
            int notes =  (amount/ coins[i]);
            cnt += notes;
            amount = amount - (notes * coins[i]);
        }
        i++;
    }

    return cnt;
}


